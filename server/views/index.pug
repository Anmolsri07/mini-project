.contain
  .headline1
    a(href="/") 
      img.logo(src='img/resbuild.svg ' alt='')
    nav
      .button-up
        -if(loginUser != null)
          form(action="/logout", method="post")
            button.up-btn(type="submit") LogOut 
        -else 
           a.up-btn(href='/sign-in') Sign in
        a.up-btn(href='#') Build resume
  section
    .displaying
      .contents
        h1.heading.heading--1 IMPRESSIVE RESUMES
        h1.heading.heading--2 EASY ONLINE BUILDER
